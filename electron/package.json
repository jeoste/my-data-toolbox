{
  "name": "json-tools-electron",
  "version": "0.1.0",
  "description": "JSON Tools - All-in-one tools for JSON powered by Electron",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build-win": "npm run build && electron-builder --win",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:pack": "npm run build && electron-builder --dir"
  },
  "author": {
    "name": "jeoste",
    "email": "jeoffrey039@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-navigation-menu": "^1.0.0",
    "@radix-ui/react-separator": "^1.0.0",
    "@radix-ui/react-slot": "^1.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "@radix-ui/react-toast": "^1.0.0",
    "@radix-ui/react-tooltip": "^1.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.0.0",
    "i18next": "^25.3.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonpath-plus": "^8.1.0",
    "lucide-react": "^0.400.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-i18next": "^15.6.0",
    "sonner": "^1.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "build": {
    "appId": "com.json-tools.json-generator",
    "productName": "JSON Tools",
    "copyright": "Copyright Â© 2025 jeoste",
    "icon": "assets/icon.ico",
    "publish": [
      {
        "provider": "github",
        "owner": "jeoste",
        "repo": "json-tools"
      }
    ],
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "assets/**/*",
      "node_modules/fs-extra/**/*",
      "node_modules/universalify/**/*",
      "node_modules/graceful-fs/**/*",
      "node_modules/jsonfile/**/*",
      "updater.js",
      "node_modules/electron-log/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "extraResources": [
      {
        "from": "../src",
        "to": "src",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../examples",
        "to": "examples",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "../LICENSE",
        "to": "LICENSE"
      },
      {
        "from": "../dist/backend.exe",
        "to": "backend.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "JSON-Tools-Setup-${version}.${ext}",
      "publisherName": "jeoste",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JSON Tools",
      "artifactName": "JSON-Tools-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false
    }
  }
}
